{
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.iconTheme": "vscode-icons",
  "window.newWindowDimensions": "maximized",
  "vsicons.dontShowNewVersionMessage": true,
  "telemetry.telemetryLevel": "off",
  "[json][jsonc][javascript][javascriptreact][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 26,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingQuotes": "always",
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": true,
  "editor.linkedEditing": true,
  "editor.rulers": [80, 120, 150],
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "titleBar.activeBackground": "#111",
      "titleBar.border": "#fff0",
      "editorGroupHeader.tabsBackground": "#ffffff11",
      "tab.inactiveBackground": "#fff0",
      "tab.activeBackground": "#000",
      "activityBar.background": "#111",
      "sideBar.background": "#000",
      "editorLineNumber.foreground": "#ffffff22",
      "editorLineNumber.activeForeground": "#ffffff77",
      "editor.background": "#000",
      "editorWhitespace.foreground": "#ffffff22",
      "editorIndentGuide.activeBackground": "#ffffff33",
      "editorIndentGuide.background": "#ffffff11",
      "editor.lineHighlightBackground": "#ffffff0d",
      "editor.lineHighlightBorder": "#fff0",
      "editorRuler.foreground": "#ffffff11"
    }
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.statusBar.alignment": "left",
  "gitlens.hovers.enabled": false
}
