{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022,
    "ecmaFeatures": { "jsx": true }
  },
  "ignorePatterns": ["node_modules/"],
  "extends": ["eslint:recommended"],
  "rules": {
    "no-unused-vars": ["error", { "args": "none" }]
  }
}
